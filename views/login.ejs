<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./stylesheets/style.css">
    <script>
      function checkLogin(){
           let username = document.getElementById('username').value;
           let password = document.getElementById('password').value;
           var xhttp = new XMLHttpRequest();
           xhttp.onreadystatechange = function () {
               if (this.readyState == 4 && this.status == 200) {
                   let response = JSON.parse(this.responseText);
                   window.alert(response.status)
               }
           }
           var url = "http://localhost:3000/login"
           xhttp.open("POST", url, true);
           xhttp.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
           xhttp.send(JSON.stringify(
               {
                   "username": username,
                   "password": password
               }));
       }
    </script>
    <title>Login Page</title>
</head>
<body background="img/background.png" style="background-repeat:no-repeat; background-size: 100% 100%;">
    <div class="md:flex min-h-10">
        <!-- Nav -->
        <div
          class="md:flex flex-wrap justify-between w-full h-20 text-white bg-black md:flex-nowrap"
        >
          
          <div class="z-30 flex items-center h-full pl-3 space-x-3 bg-gradient-to-r from-blue-200 to-blue-300">

            <img alt="logo" class=" w-50 h-20 border-1 border-green-500" src="img/logo.png" />
          
            <!--<p class="text-2xl text-black">CoSahayak</p> -->
          </div>
          
    
          <!-- Menu -->
          <div
            class="flex flex-col items-stretch w-screen text-xl text-center transform bg-gradient-to-r from-blue-300 to-blue-500 md:flex-row md:translate-y-0 md:space-x-5 md:items-center md:justify-end md:pr-3"
          >
            <a
              href="http://localhost:3000/"
              class="h-10 leading-10 border-b-2 border-dotted md:border-none hover:underline"
              >Home</a
            >


          </div>
        </div>
      </div> 

    <div class="container">


        <!-- Alert Component-->
        <div class=" w-full bg-red-200 border border-red-600 text-red-900 px-4 py-3 rounded my-12" role="alert">
            <strong class="font-bold inline-flex bg-pink-600 text-white rounded-full h-6 px-3 justify-center items-center text-">Note !</strong>
            <span class="block sm:inline">Please make sure you have been provided with the login credentials by us. Happy Helping !</span>
        </div>
    </div>

    <div class="font-sans min-h-full antialiased bg-transparent pt-6 pb-5">
        <div class="md:flex flex-col justify-center sm:w-96 sm:m-auto mx-5 mb-5 space-y-8">
          <form action="http://localhost:3000/login" method="POST">
            <div class="md:flex flex-col bg-white p-10 rounded-lg shadow space-y-6">
              <h1 class="font-bold text-xl text-center">Sign in to your account</h1>
    
              <div class="flex flex-col space-y-1">
                <input type="text" name="username" id="username" class="border-2 rounded px-3 py-2 w-full focus:outline-none focus:border-purple-500 focus:shadow" placeholder="Username" />
              </div>
    
              <div class="flex flex-col space-y-1">
                <input type="password" name="password" id="password" class="border-2 rounded px-3 py-2 w-full focus:outline-none focus:border-purple-500 focus:shadow" placeholder="Password" />
              </div>
                <button onclick="checkLogin()" class="bg-purple-500 hover:bg-purple-700 text-white font-bold px-5 py-2 rounded focus:outline-none shadow transition-colors">Log In</button>
              </div>
            </div>
          </form>
        </div>
      </div> 
      <br>
      <br> 
      
     <!--Final Footer-->
<%- include('./partial/footer') %> 
    
</body>